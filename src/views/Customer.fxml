<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>

<Pane fx:id="container" prefHeight="700.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CustomerController">
	<children>
		<TextField fx:id="searchBar" layoutX="500.0" layoutY="30.0" prefWidth="200.0" promptText="Search" />
		<TableView fx:id="tableView" editable="true" layoutX="50.0" layoutY="80.0" prefHeight="500.0" prefWidth="1100.0" tableMenuButtonVisible="true">
			<columns>
				<TableColumn fx:id="expectedDateColumn" editable="false" minWidth="200.0" prefWidth="200.0" resizable="false" sortable="false" text="Expected date" />
				<TableColumn fx:id="totalPriceColumn" minWidth="150.0" prefWidth="150.0" resizable="false" text="Total price" />
				<TableColumn fx:id="paymentMethodColumn" minWidth="200.0" prefWidth="200.0" resizable="false" text="Payment method" />
				<TableColumn fx:id="stateColumn" minWidth="205.0" prefWidth="205.0" resizable="false" text="State" />
			</columns>
		</TableView>
		<Button fx:id="btnViewProducts" alignment="CENTER" defaultButton="true" layoutX="265.0" layoutY="605.0" onAction="#openViewProductsView" prefWidth="150.0" text="View products" />
		<Button fx:id="btnFidelityCard" alignment="CENTER" defaultButton="true" layoutX="515.0" layoutY="605.0" onAction="#openFidelityCardView" prefWidth="150.0" text="Fidelity card" />
		<Button fx:id="btnEditProfile" alignment="CENTER" defaultButton="true" layoutX="765.0" layoutY="605.0" onAction="#openEditProfileView" prefWidth="150.0" text="Edit profile" />
	</children>
</Pane>
