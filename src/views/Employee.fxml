<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>

<Pane fx:id="container" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.EmployeeController">
   <children>
      <TabPane fx:id="tabPane" layoutY="24.0" prefHeight="676.0" prefWidth="1200.0" stylesheets="@../../res/styles/Style.css" tabClosingPolicy="UNAVAILABLE">
      	<tabs>
      		<Tab text="Modify product">
      			<content>
      				<Pane prefHeight="700.0" prefWidth="1200.0">
      					<children>
      						<TextField fx:id="searchBar" layoutX="507.0" layoutY="30.0" prefWidth="200.0" promptText="Search by name" />
      						<TableView fx:id="tableView" editable="true" layoutX="50.0" layoutY="80.0" prefHeight="500.0" prefWidth="1100.0" tableMenuButtonVisible="true">
      							<columns>
      								<TableColumn fx:id="imageColumn" editable="false" minWidth="105.0" prefWidth="105.0" resizable="false" sortable="false" text="Image" />
      								<TableColumn fx:id="imagePathColumn" editable="false" minWidth="250.0" prefWidth="250.0" resizable="false" sortable="false" text="Path" />
      								<TableColumn fx:id="wardColumn" minWidth="230.0" prefWidth="230.0" resizable="false" text="Ward" />
      								<TableColumn fx:id="nameColumn" minWidth="150.0" prefWidth="150.0" resizable="false" text="Name" />
      								<TableColumn fx:id="qtyPerItemColumn" minWidth="100.0" prefWidth="100.0" resizable="false" sortable="false" text="QtyPerItem" />
      								<TableColumn fx:id="priceColumn" minWidth="100.0" prefWidth="100.0" resizable="false" text="Price" />
      								<TableColumn fx:id="qtyAvailableColumn" minWidth="150.0" prefWidth="150.0" resizable="false" text="QtyAvailable" />
      							</columns>
      						</TableView>
      						<Button fx:id="btnAddProduct" alignment="CENTER" defaultButton="true" layoutX="444.0" layoutY="601.0" onAction="#goToAddProduct" prefWidth="150.0" text="Add Product" />
                        <Button fx:id="btnRemoveProduct" alignment="CENTER" defaultButton="true" layoutX="607.0" layoutY="601.0" onAction="#removeProduct" prefWidth="150.0" text="Remove Product" />
      					</children>
      				</Pane>
      			</content>
      		</Tab>
      		<Tab text="View shopping">
      			<content>
      				<Pane prefHeight="700.0" prefWidth="1200.0">
      					<children>
      						<TextField fx:id="searchBarTab2" layoutX="500.0" layoutY="30.0" prefWidth="200.0" promptText="Search" />
      						<TableView fx:id="shoppingTableView" editable="true" layoutX="50.0" layoutY="80.0" prefHeight="500.0" prefWidth="1100.0" tableMenuButtonVisible="true">
      							<columns>
      								<TableColumn fx:id="IDColumn" editable="false" minWidth="105.0" prefWidth="105.0" resizable="false" sortable="false" text="ID" />
      								<TableColumn fx:id="expectedDateColumn" editable="false" minWidth="200.0" prefWidth="200.0" resizable="false" sortable="false" text="Expected date" />
      								<TableColumn fx:id="customerEmailColumn" minWidth="230.0" prefWidth="230.0" resizable="false" text="Customer email" />
      								<TableColumn fx:id="totalPriceColumn" minWidth="150.0" prefWidth="150.0" resizable="false" text="Total price" />
      								<TableColumn fx:id="paymentMethodColumn" minWidth="200.0" prefWidth="200.0" resizable="false" text="Payment method" />
      								<TableColumn fx:id="stateColumn" minWidth="205.0" prefWidth="205.0" resizable="false" text="State" />
      							</columns>
      						</TableView>
      						<Button fx:id="btnViewProducts" alignment="CENTER" defaultButton="true" layoutX="525.0" layoutY="608.0" onAction="#viewProducts" prefWidth="150.0" text="View products" />
                        <ComboBox fx:id="cmbSearchFilter" layoutX="741.0" layoutY="30.0" prefWidth="150.0" />
      					</children>
      				</Pane>
      			</content>
      		</Tab>
      	</tabs>
      </TabPane>
      <MenuBar layoutY="2.0" prefHeight="25.0" prefWidth="1200.0">
         <menus>
            <Menu mnemonicParsing="false" text="User">
               <items>
                  <MenuItem fx:id="btnLogOut" mnemonicParsing="false" onAction="#showLogOutPrompt" text="Logout" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
               <items>
                  <MenuItem fx:id="btnAppInfos" mnemonicParsing="false" onAction="#goToAppInfos" text="App Infos" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
   </children>
</Pane>
