<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.Pane?>

<Pane fx:id="pane" prefHeight="700.0" prefWidth="1200.0" stylesheets="@../../res/styles/Style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ShoppingCartController">
   <children>
      <TableView fx:id="tableView" editable="true" layoutX="50.0" layoutY="80.0" prefHeight="500.0" prefWidth="1100.0" tableMenuButtonVisible="true">
         <columns>
            <TableColumn fx:id="imageColumn" editable="false" minWidth="105.0" prefWidth="105.0" resizable="false" sortable="false" text="Image" />
            <TableColumn fx:id="nameColumn" editable="false" minWidth="150.0" prefWidth="150.0" resizable="false" text="Name" />
            <TableColumn fx:id="priceColumn" editable="false" minWidth="100.0" prefWidth="100.0" resizable="false" text="Price" />
            <TableColumn fx:id="quantityColumn" minWidth="150.0" prefWidth="150.0" resizable="false" text="Quantity" />
            <TableColumn fx:id="brandColumn" editable="false" minWidth="112.0" prefWidth="112.0" resizable="false" text="Brand" />
            <TableColumn fx:id="typeColumn" editable="false" minWidth="112.0" prefWidth="112.0" resizable="false" text="Type" />
            <TableColumn fx:id="madeInItalyColumn" editable="false" minWidth="112.0" prefWidth="112.0" resizable="false" sortable="false" text="Made in Italy" />
         </columns>
      </TableView>
      <Button fx:id="btnApplyChanges" alignment="CENTER" defaultButton="true" layoutX="527.5" layoutY="605.0" onAction="#applyChanges" prefWidth="150.0" text="Apply changes" />
      <Button fx:id="btnRemoveProduct" alignment="CENTER" defaultButton="true" layoutX="311.0" layoutY="605.0" onAction="#removeProduct" prefWidth="150.0" text="Remove product" />
      <ComboBox fx:id="cmbType" layoutX="278.0" layoutY="30.0" prefWidth="150.0" promptText="Filter by type" />
      <ComboBox fx:id="cmbBrand" layoutX="106.0" layoutY="30.0" prefWidth="150.0" promptText="Filter by brand" />
   </children>
</Pane>
