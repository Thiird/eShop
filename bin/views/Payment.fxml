      <RadioButton layoutX="20.0" layoutY="181.0" mnemonicParsing="false">
         <toggleGroup>
            <ToggleGroup fx:id="paymentMethods" />
         </toggleGroup></RadioButton>
      <ImageView fitHeight="100.0" fitWidth="100.0" layoutX="50.0" layoutY="140.0" pickOnBounds="true" preserveRatio="true">
