            <Image url="@../../res/icons/payment_methods/credit_card.png" />
         </image>
      </ImageView>
      <RadioButton layoutX="180.0" layoutY="181.0" mnemonicParsing="false" toggleGroup="$paymentMethods" />
      <ImageView fitHeight="100.0" fitWidth="100.0" layoutX="210.0" layoutY="140.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../res/icons/payment_methods/paypal.png" />
         </image>
      </ImageView>
      <RadioButton layoutX="340.0" layoutY="181.0" mnemonicParsing="false" toggleGroup="$paymentMethods" />
      <ImageView fitHeight="100.0" fitWidth="100.0" layoutX="370.0" layoutY="140.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../res/icons/payment_methods/on_delivery.png" />
         </image>
      </ImageView>
      <Button alignment="CENTER" defaultButton="true" layoutX="200.0" layoutY="300.0" prefHeight="25.0" prefWidth="100.0" text="Pay" />
   </children>
</Pane>
